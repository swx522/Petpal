{
  // 日志配置
  // 使用Serilog进行结构化日志记录
  "Logging": {
    "LogLevel": {
      "Default": "Information",          // 默认日志级别
      "Microsoft.AspNetCore": "Warning"  // ASP.NET Core框架日志级别
    }
  },

  // 数据库连接字符串配置
  "ConnectionStrings": {
    "DefaultConnection": "Server=121.40.86.149;Port=3306;Database=petpal;User Id=petpal;Password=Lele050522;SslMode=None;AllowPublicKeyRetrieval=True;Connection Timeout=30"
  },

  // JWT身份认证配置
  "Jwt": {
    "Key": "YourSuperSecretKeyHere12345678901234567890", // JWT签名密钥（生产环境应使用强密钥）
    "Issuer": "petpalAPI",                        // 令牌发行者
    "Audience": "petpalClient"                    // 令牌受众
  },

  // Serilog日志配置
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",        // 最低日志级别
      "Override": {
        "Microsoft": "Warning",        // Microsoft命名空间的日志级别
        "System": "Warning"            // System命名空间的日志级别
      }
    },
    "WriteTo": [
      {
        "Name": "Console"              // 输出到控制台
      },
      {
        "Name": "File",                // 输出到文件
        "Args": {
          "path": "logs/log-.txt",     // 日志文件路径（按日期分割）
          "rollingInterval": "Day"     // 按天分割日志文件
        }
      }
    ]
  },

  // Redis缓存配置（可选）
  // 用于存储热点数据，提高性能
  "Redis": {
    "ConnectionString": "localhost:6379",  // Redis服务器地址
    "DefaultDatabase": 0,                  // 默认数据库编号
    "Password": ""                         // Redis密码（如果有）
  },

  // 第三方服务配置
  "ThirdPartyServices": {
    // 高德地图API配置（用于地理位置服务）
    "Amap": {
      "ApiKey": "your_amap_api_key_here",     // 高德地图API密钥
      "BaseUrl": "https://restapi.amap.com"   // API基础URL
    },

    // 阿里云OSS配置（用于文件上传）
    "AliyunOSS": {
      "AccessKeyId": "your_access_key_id",     // 阿里云AccessKey ID
      "AccessKeySecret": "your_access_key_secret", // AccessKey Secret
      "BucketName": "your-bucket-name",        // OSS存储桶名称
      "Region": "oss-cn-hangzhou",             // OSS地域
      "BaseUrl": "https://your-bucket-name.oss-cn-hangzhou.aliyuncs.com" // OSS基础URL
    },

    // 阿里云短信服务配置（用于发送验证码）
    "AliyunSMS": {
      "AccessKeyId": "your_access_key_id",     // 阿里云AccessKey ID
      "AccessKeySecret": "your_access_key_secret", // AccessKey Secret
      "SignName": "宠物互助平台",                // 短信签名
      "TemplateCode": "SMS_123456789"         // 短信模板ID
    }
  },

  // 业务规则配置
  "BusinessRules": {
    // 互助范围配置（单位：米）
    "MutualHelpRange": {
      "MinDistance": 100,     // 最小互助距离（米）
      "MaxDistance": 3000     // 最大互助距离（米）
    },

    // 信誉系统配置
    "ReputationSystem": {
      "InitialScore": 100,    // 新用户初始信誉分
      "MinScore": 0,          // 最低信誉分
      "MaxScore": 1000        // 最高信誉分
    },

    // 文件上传配置
    "FileUpload": {
      "MaxImageSize": 10485760,     // 最大图片大小（10MB）
      "AllowedImageTypes": [ "jpg", "jpeg", "png", "gif" ], // 允许的图片格式
      "MaxImagesPerUpload": 5       // 单次最多上传图片数量
    }
  }
}
